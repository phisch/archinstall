{
    "!root-password": "<root_password>",
    "audio": "pulseaudio",
    "bootloader": "systemd-bootctl",
    "filesystem": "btrfs",
    "harddrive": {
        "path": "/dev/sda"
    },
    "hostname": "box",
    "kernels": [
        "linux"
    ],
    "keyboard-language": "de",
    "mirror-region": {
        "Worldwide": {
            "https://mirror.rackspace.com/archlinux/$repo/os/$arch": true
        }
    },
    "nic": {
        "NetworkManager": true
    },
    "packages": [],
    "profile": null,
    "superusers": {
        "<username>": {
            "!password": "<password>"
        }
    },
    "timezone": "Europe/Berlin",
    "users": {
        "<username>": {
            "!password": "<password>"
        }
    }
}